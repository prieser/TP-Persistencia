<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="modelo.aerolinea.Tramo" table="Tramos">
		<id name="idTramo" type="java.lang.Integer">
			<column name="IdTramo" />
			<generator class="identity" />
		</id>

		<property name="origen" type="string">
			<column name="origen" length="20" not-null="true" />
		</property>

		<property name="destino" type="string">
			<column name="destino" length="20" not-null="true" />
		</property>

		<property name="horaDeLlegada" type="date">
			<column name="horaDeLlegada" length="20" not-null="true" />
		</property>

		<property name="horaDeSalida" type="date">
			<column name="horaDeSalida" length="20" not-null="true" />
		</property>

		<property name="precio" type="int">
			<column name="precio" length="20" not-null="true" />
		</property>

		<set name="asientos" table="Tramo_Asientos">
			<key column="asientos" />
			<many-to-many class="modelo.aerolinea.Asiento" />
		</set>

	</class>
</hibernate-mapping>