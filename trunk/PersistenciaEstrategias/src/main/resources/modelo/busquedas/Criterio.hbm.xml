            <!--</component>-->
            <!--<component name="criterio2" class="modelo.busquedas.Criterio">-->
            <!--<property name="idCriterio" column="ID_CRITERIO2" />-->
            <!--</component>-->
            <!--<property name="operador" type="java.lang.String">-->
            <!--<column name="OPERADOR" length="20" not-null="false" unique="false"/>-->
            <!--</property>-->

            <property name="criterio1" type="java.lang.Integer">
                <column name="ID_CRITERIO1" length="20" not-null="false" unique="false"/>
            </property>
            <property name="criterio2" type="java.lang.Integer">
                <column name="ID_CRITERIO2" length="20" not-null="false" unique="false"/>
            </property>
            <property name="operador" type="java.lang.String">
                <column name="OPERADOR" length="20" not-null="false" unique="false"/>
            </property>


        </subclass>
    </class>

</hibernate-mapping>